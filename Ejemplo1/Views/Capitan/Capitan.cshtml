
@{
    ViewBag.Title = "Capitan";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-page-body col-md-12">
    <div class="card-header col-md-12 row">
        <div class="col-md-12">
            <center><b>CAPITANES</b></center>
        </div>

    </div>

    <hr>

    <div class="panel panel-info">
        <div class="card-body">
            <center><h4>Ingrese la Información del Nuevo Capitán para registrarlo</h4></center>
        </div>
        <div class="panel-body">
            <div class="row">

                <div class="col-md-12 form-group">


                    @*<div class="form-group">*@
                    <div class="col-md-12">
                        <div class="col-md-2"></div>
                        <div class="col-md-3">
                            <label align="left">Nombre Capitan:</label>
                        </div>
                        <div class="col-md-3">
                            <input type="text" id="txtNombreCapitan" style="width: 90%;" class="form-control" />

                        </div>
                        <div class="col-md-2">
                            <label>Cédula Capitán:</label>

                        </div>
                        <div class="col-md-2">
                            <input type="text" id="txtCedulaCapitan" style="width: 90%;" class="form-control" />
                        </div>
                        @*<div class="col-md-1"></div>*@


                    </div>
                </div>
            </div>

            


            <div class="row">
                <div class="col-md-12 form-group">
                    <div class="col-md-4"></div>
                    <div class="col-md-4" align="center">
                        <center>
                            <div class="form-group form-inline">
                                <input type="button" value="Guardar Capitán" onclick="javascript:GuardarCapitan()" />
                                <input type="button" value="Consultar Capitanes" onclick="javascript:ConsultarCapitanes()" />
                                <input type="button" value="Ver Diagrama" onclick="window.location.href='@Url.Action("TreeView", "Capitan")'" />
                                
                            </div>
                        </center>
                    </div>
                </div>
            </div>
           

        </div>
    </div>
</div>

<table id="grid-selection" class="table table-condensed table-hover table-striped">
    <thead>
        <tr>
            
            <th data-column-id="Nombre">Nombre Capitán</th>
            <th data-column-id="Cédula Capítán" data-order="desc">Cédula</th>
            
        </tr>
    </thead>
    <tbody id="tbodyid"></tbody>
</table>

<script src="~/Scripts/Views/Capitan/Capitan.js"></script>


<style>
    .k-grid-header .k-header {
        height: 70px;
        padding: 0;
        overflow: visible;
        white-space: normal;
    }

    .searchButton {
        height: 46px;
        width: 90px;
        cursor: pointer;
        border: none;
        background-color: aqua;
    }

    .card-header:first-child {
        border-radius: calc(0.25rem - 1px) calc(0.25rem - 1px) 0 0;
    }

    .card-header {
        padding: 0.75rem 1.25rem;
        margin-bottom: 0;
        background-color: rgba(0, 0, 0, 0.03);
        border-bottom: 1px solid rgba(0, 0, 0, 0.125);
    }

    .col-md-12 {
        -webkit-box-flex: 0;
        -ms-flex: 0 0 100%;
        flex: 0 0 100%;
        max-width: 100%;
    }

    *, *::before, *::after {
        -webkit-box-sizing: border-box;
        box-sizing: border-box;
    }
</style>



